<Window x:Class="Project_3.createstandpunt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_3"
        mc:Ignorable="d"
        Title="createstandpunt" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Width="80" Text="Standpunt_Id:"/>
                <TextBlock x:Name="tbstandpuntid"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="Thema_Id:"/>
                <TextBox x:Name="tbthemaid"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="Standpunt:"/>
                <TextBox x:Name="tbstandpunt" />
            </DockPanel>
            <Button Content="Maak aan" Click="Create_Click"/>
        </StackPanel>
    </Grid>
</Window>
