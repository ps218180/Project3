<Window x:Class="Project_3.EditThema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_3"
        mc:Ignorable="d"
        Title="EditThema" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Width="80" Text="Thema_ID:"/>
                <TextBlock x:Name="tbid"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Width="80" Text="Thema:"/>
                <TextBox x:Name="tbnaam"/>
            </DockPanel>
            <Button Content="wijzig" Click="Update_Click"/>
        </StackPanel>
    </Grid>
</Window>
